#Google colab 
# Importation des bibliothèques nécessaires
import numpy as np
import matplotlib.pyplot as plt
from sklearn.cluster import KMeans
from sklearn.metrics import adjusted_rand_score
from sklearn.preprocessing import MinMaxScaler
from sklearn.datasets import make_blobs

# Générer un jeu de données avec plusieurs classes
X, y = make_blobs(n_samples=1000, centers=3, random_state=42)

# Normalisation des données
scaler = MinMaxScaler()
X_scaled = scaler.fit_transform(X)

# Appliquer KMeans avec 3 clusters
kmeans = KMeans(n_clusters=3, random_state=42)
kmeans.fit(X_scaled)

# Obtenir les prédictions des clusters
y_pred = kmeans.labels_

# Calcul de l'Adjusted Rand Index (ARI)
ari = adjusted_rand_score(y, y_pred)
print(f"Adjusted Rand Index (ARI): {ari:.2f}")

# Visualisation des clusters (réduction de dimensionnalité avec PCA)
from sklearn.decomposition import PCA
pca = PCA(n_components=2)
X_pca = pca.fit_transform(X_scaled)

# Visualisation des clusters
plt.figure(figsize=(8, 6))
plt.scatter(X_pca[:, 0], X_pca[:, 1], c=y_pred, cmap='viridis', s=50, alpha=0.6)
plt.title("KMeans Clustering with PCA")
plt.xlabel("PCA Component 1")
plt.ylabel("PCA Component 2")
plt.colorbar(label='Cluster')
plt.show()
